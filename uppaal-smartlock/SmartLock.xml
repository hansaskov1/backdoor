			<result outcome="success" type="quality" timestamp="2024-04-23 12:18:14 +0200">
			</result>
		</query>
		<query>
			<formula/>
			<comment>//Bounded liveness</comment>
		</query>
		<query>
			<formula>E[] ((Human_p.DoorCommand and sys_timer &lt;= 1000) imply Lock_p.Unlocked)</formula>
